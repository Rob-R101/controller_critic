<div class="container mt-5">
  <h1 class="text-center">Reviews for <%= @game.title %></h1>

  <div class="row">
    <% if @reviews.any? %>
      <% @reviews.each do |review| %>
        <div class="col-md-6">
          <div class="card game-card">
            <div class="card-body">
              <h3><%= review.user.email %></h3>
              <h3><%= review.review %></h3>
              <h3 class="text-muted">Posted on <%= review.created_at.strftime("%B %d, %Y") %></h3>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="alert alert-warning text-center">
        No reviews yet for this game.
      </div>
    <% end %>
  </div>
</div>

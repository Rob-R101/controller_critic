<%= form_for(resource, as: resource_name, html: { class: "signup-form" }, url: registration_path(resource_name)) do |f| %>
  <div class="login-inputs">
    <%= f.text_field :username, placeholder: "Username", class: "login-input", class: "login-input" %>
  </div>
  <div class="login-inputs">
    <%= f.text_field :email, placeholder: "Email", class: "login-input", class: "login-input" %>
  </div>
  <div class="login-inputs">
    <%= f.password_field :password, placeholder: "Password", class: "login-input" %>
  </div>
  <div class="login-inputs">
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "login-input" %>
  </div>
  <div class="actions">
    <%= f.submit "Sign Up" %>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div>
    <%= f.text_field :username, placeholder: "Username", class: "login-input" %>
  </div>
  <div>
    <%= f.text_field :email, placeholder: "Email", class: "login-input" %>
  </div>
  <div>
    <%= f.password_field :password, placeholder: "Password", class: "login-input" %>
  </div>
  <div>
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "login-input" %>
  </div>
  <div>
    <%= f.submit "Sign Up" %>
  </div>
<% end %>

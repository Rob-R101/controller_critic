<%= form_for(resource, as: resource_name, html: { class: "login-form" }, url: session_path(resource_name)) do |f| %>
  <div class="login-input">
    <%= f.text_field :username, placeholder: "Username", class: "login-input" %>
  </div>
  <%# <div class="login-input">
    <%= f.email_field :email, placeholder: "Email", class: "login-input" %>
  <%# </div> %>
  <div class="login-input">
    <%= f.password_field :password, placeholder: "Password", class: "login-input" %>
  </div>
  <div class="login-input">
    <%= f.submit "Login" %>
  </div>
<% end %>

<div class="user-container">
  <div class="user-details-card">
    <div class="details">
      <div class="info-text">
        <h1 class="username"><%= "#{@user.username}" %></h1>
        <p class="info-line">Reviews:</p>
        <p class="info-line">Votes:</p>
        <p class="info-line">Most Played:</p>
      </div>

      <div class="console-logos">
        <ul>
        <li><i class="fa-brands fa-playstation"></i></li>
        <li><i class="fa-brands fa-xbox"></i></li>
        <li><i class="fa-solid fa-laptop"></i></li>
        </ul>
      </div>
    </div>

    <div class="profile-image">
      <%= image_tag("profile-pic.png", alt: "Profile Picture", class: "profile-image") %>
    </div>
  </div>
</div>

<div class="wish-games">
  <h2>My Games</h2>
  <h2>Wishlist</h2>
</div>
